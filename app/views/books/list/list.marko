<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/estatico/css/style-form.css" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <body>
        <header class="header">
            <h1> Listagem de livros</h1>
        </header>

        <table id="livros">
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Preço</th>
                <th>Editar</th>
                <th>Remover</th>
            </tr>
            <tbody id="list">
                <tr id="livro_${livro.id}" for (livro in data.livros)> 
                    <td>${livro.id}</td>
                    <td>${livro.titulo}</td>
                    <td>${livro.preco}</td>
                    <td><a href="/livros/form/${livro.id}">Editar</a></td> 
                    <td><a href="#" data-ref="${livro.id}" data-type="remocao">Remover</a></td> 
                </tr>
            </tbody>
        </table> 

        <script src="/estatico/js/delete-book.js">
        </script> 
    </body> 
</html>